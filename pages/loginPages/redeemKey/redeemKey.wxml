<view class="page" data-weui-theme="{{theme}}">
	<form class="weui-form" bindsubmit="submit">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">请输入授权码以开启打卡功能</h2>
			<view class="weui-form__desc">若无授权码请联系开发者</view>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">授权码</label></view>
						<view class="weui-cell__bd"><input class="weui-input" name="keyString"/></view>
					</view>
				</view>
			</view>
		</view>
		<view class="weui-form__opr-area">
			<button class="weui-btn weui-btn_primary" form-type="submit">提交</button>
		</view>
	</form>
</view>